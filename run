#!/bin/bash -x

#-v /usr/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu:ro \

docker run \
	--rm \
	--name jenkins \
	-p 8080:8080 \
	-p 50000:50000 \
	-v /home/ozlevka/jenkins-home:/var/jenkins_home \
	-v /var/run/docker.sock:/var/run/docker.sock \
	-v $(which docker):/usr/bin/docker \
	-v /home/ozlevka/projects/playbooks:/playbooks \
	-v /home/ozlevka/projects/playbooks/ansible.cfg:/etc/ansible/ansible.cfg \
	-v /home/ozlevka/.aws:/root/.aws \
	-v /home/ozlevka/mydocs/levsconnect.pem:/playbooks/levsconnect.pem \
	--privileged=true \
	ozlevka/jenkins:latest
# latest 181107-17.08

