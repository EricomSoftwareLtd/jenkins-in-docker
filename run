#!/bin/bash -x

#-v /usr/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu:ro \

docker run \
	--rm \
	--name myjenkins \
	-p 8080:8080 \
	-p 50000:50000 \
	-v /home/lev/tmp/jenkins/home:/var/jenkins_home \
	-e "TEST_HOME=/home/lev/tmp/jenkins/home/workspace/test-1-2" \
	-v /var/run/docker.sock:/var/run/docker.sock \
	-v $(which docker):/usr/bin/docker \
	--privileged=true \
	ozlevka/jenkins:170928-20.42

